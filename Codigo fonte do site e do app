\\\GASTOS TOTAL///

<!DOCTYPE html>
<html>
<head>
    <title>Controle de Gastos da Festa</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
            background-color: #F5F5DC;
        }
        h1, .total {
            color: #8B4513;
            font-size: 2em; 
            text-align: center;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            border: 1px solid #D4AF37;
            padding: 15px;
            text-align: left;
        }
        th {
            background-color: #D4AF37;
            color: white;
        }
        .total {
            font-size: 1.8em;
            font-weight: bold;
        }
        .back-button {
            display: inline-block;
            margin-top: 20px;
            padding: 10px 20px;
            font-size: 20px;
            text-decoration: none;
            color: white;
            background-color: #8B4513;
            border-radius: 12px;
            box-shadow: none; 
            text-align: center;
        }
        .center {
            display: flex;
            justify-content: center;
            align-items: center;
        }
    </style>
</head>
<body>
    <h1>Controle de Gastos da Festa</h1>
    <table id="expensesTable">
        <tr>
            <th>Item</th>
            <th>Custo (R$)</th>
        </tr>
    </table>
    <p id="totalCost" class="total"></p>
    <script>
        var expenses = [
            { item: 'Decoracao', cost: 500 },
            { item: 'Comida', cost: 1500 },
            { item: 'Bebida', cost: 800 },
            { item: 'Musico', cost: 700 },
            { item: 'Convites', cost: 200 },
        ];

        var table = document.getElementById('expensesTable');
        var totalCost = 0;

        for (var i = 0; i < expenses.length; i++) {
            var row = table.insertRow(-1);
            var cell1 = row.insertCell(0);
            var cell2 = row.insertCell(1);
            cell1.innerHTML = expenses[i].item;
            cell2.innerHTML = expenses[i].cost;
            totalCost += expenses[i].cost;
        }

        document.getElementById('totalCost').innerHTML = "Custo total da festa: R$" + totalCost.toFixed(2);
    </script>
    <div class="center">
        <a href="menu.html" class="back-button">Voltar</a>
    </div>
</body>
</html>


\\\GASTOS COMES E BEBES///

<!DOCTYPE html>
<html>
<head>
    <title>Calculadora de Comes e Bebes</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
            background-color: #F5F5DC;
        }
        h1 {
            color: #8B4513;
            font-size: 2em; 
            text-align: center;
        }
        .total {
            font-size: 1.8em;
            color: #8B4513;
            font-weight: bold;
            text-align: center;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            border: 1px solid #D4AF37;
            padding: 15px;
            text-align: left;
        }
        th {
            background-color: #D4AF37;
            color: white;
        }
        .back-button {
            display: inline-block;
            margin-top: 20px;
            padding: 10px 20px;
            font-size: 20px;
            text-decoration: none;
            color: white;
            background-color: #8B4513;
            border-radius: 12px;
            box-shadow: none; 
            text-align: center;
        }
        .center {
            display: flex;
            justify-content: center;
            align-items: center;
        }
    </style>
</head>
<body>
    <h1>Calculo de Comes e Bebes para a Festa</h1>
    <table id="foodTable">
        <tr>
            <th>Item</th>
            <th>Quantidade</th>
            <th>Preço Unitário (R$)</th>
            <th>Preço Total (R$)</th>
        </tr>
    </table>
    <table id="drinkTable">
        <tr>
            <th>Item</th>
            <th>Quantidade</th>
            <th>Preço Unitário (R$)</th>
            <th>Preço Total (R$)</th>
        </tr>
    </table>
    <p id="totalCost" class="total"></p>
    <script>
        var foodItems = [
            { name: 'Salgadinhos', quantity: 600, price: 1 },
            { name: 'Docinhos', quantity: 450, price: 1.5 },
            { name: 'Bolo', quantity: 15, price: 225 / 15 }
        ];
        var drinkItems = [
            { name: 'Refrigerante', quantity: 25, price: 12 },
            { name: 'Água', quantity: 30, price: 4 },
            { name: 'Cerveja', quantity: 25, price: 15.20 }
        ];

        var foodTable = document.getElementById('foodTable');
        var drinkTable = document.getElementById('drinkTable');

        var totalCost = 0;

        foodItems.forEach(function(item) {
            var row = foodTable.insertRow(-1);
            row.insertCell(0).innerHTML = item.name;
            row.insertCell(1).innerHTML = item.quantity;
            row.insertCell(2).innerHTML = item.price.toFixed(2);
            var total = item.quantity * item.price;
            row.insertCell(3).innerHTML = total.toFixed(2);
            totalCost += total;
        });

        drinkItems.forEach(function(item) {
            var row = drinkTable.insertRow(-1);
            row.insertCell(0).innerHTML = item.name;
            row.insertCell(1).innerHTML = item.quantity;
            row.insertCell(2).innerHTML = item.price.toFixed(2);
            var total = item.quantity * item.price;
            row.insertCell(3).innerHTML = total.toFixed(2);
            totalCost += total;
        });

        document.getElementById('totalCost').innerHTML = "Custo total: R$" + totalCost.toFixed(2);
    </script>
    <div class="center">
        <a href="menu.html" class="back-button">Voltar</a>
    </div>
</body>
</html>


